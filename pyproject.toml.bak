[build-system]
requires = ["setuptools>=42", "setuptools-scm>=6.0"]
build-backend = "setuptools.build_meta"

[project]
name = "tdsp_analysis"
version = "0.1.0"
description = "AnÃ¡lisis de datos con Python para el proyecto M6"
authors = [{name = "Tu Nombre", email = "tu@email.com"}]
requires-python = ">=3.10,<3.11"
dependencies = [
    "pandas>=1.3.0",
    "numpy>=1.21.0",
    "matplotlib>=3.4.0",
    "seaborn>=0.11.0",
    "scipy>=1.7.0",
    "plotly>=5.3.0",
    "jupyter>=1.0.0",
    "lightgbm>=3.3.0",
    "joblib>=1.1.0",
    "optuna>=3.0.0",
    "scikit-learn>=1.0.0"
]

[project.optional-dependencies]
dev = [
    "pytest>=6.0",
    "black>=21.0",
    "isort>=5.0",
    "flake8>=3.9"
]

[tool.setuptools.packages.find]
where = ["src"]

[tool.black]
line-length = 88
target-version = ['py310']
include = '\.pyi?$'
